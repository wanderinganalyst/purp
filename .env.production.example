# Production Environment Variables
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control!

# Flask
FLASK_ENV=production
SECRET_KEY=CHANGE_ME_TO_A_RANDOM_64_CHAR_STRING

# Database (RDS PostgreSQL)
DATABASE_URL=postgresql://purp_user:CHANGE_ME@purp-db.xxxxx.us-east-1.rds.amazonaws.com:5432/purp

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/purp/app.log
ACCESS_LOG=/var/log/purp/access.log
ERROR_LOG=/var/log/purp/error.log

# Gunicorn
GUNICORN_WORKERS=4
PORT=8000

# Cache TTL
BILLS_CACHE_TTL=3600
REPS_CACHE_TTL=3600

# Optional: Sentry for error tracking
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Optional: USPS Address Verification
# USPS_USER_ID=your_usps_user_id
