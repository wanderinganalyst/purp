# Terraform Configuration Example
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"
environment = "production"

# EC2 Instance
instance_type = "t3.small"  # 2 vCPU, 2 GB RAM
key_name      = "purp-key"  # Name of your EC2 key pair

# RDS Database
db_instance_class = "db.t3.micro"  # 2 vCPU, 1 GB RAM
db_name           = "purp"
db_username       = "purp_admin"
db_password       = "CHANGE_THIS_TO_A_SECURE_PASSWORD"

# Flask Secret
secret_key = "CHANGE_THIS_TO_A_SECURE_SECRET_KEY"

# Network Configuration
allowed_ssh_cidr = ["YOUR_IP_ADDRESS/32"]  # Replace with your IP

# Optional: Domain name
# domain_name = "purp.example.com"

# Backup Configuration
enable_backup          = true
backup_retention_days  = 7
multi_az              = false  # Set to true for high availability

# Tags
tags = {
  Project   = "Purp"
  ManagedBy = "Terraform"
  Owner     = "Your Name"
}
